extends /layouts/main

block main
  +container().py-8
    +pageTitle(title).mb-4
    table.w-full.text-left
      tbody
        tr
          th.py-4(class="w-1/3") Phone
          td #{ company.phone }
        tr
          th.py-4(class="w-1/3") Email
          td
            a(href=`mailto:${ company.email }`) #{ company.email }
        tr
          th Address
          td.py-4
            | #{ company.address.street }
            br
            | #{ company.address.city }, #{ company.address.state } #{ company.address.zip }
            br
            a(
              target="_blank"
              href=company.gmap_url
            ) Google Map &raquo;
