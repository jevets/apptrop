extends /layouts/main

block main
  +container().py-6
    +pageTitle(title).mb-0
    +lead(description).mt-0.mb-8.text-2xl

    .px-2
      .my-4.flex.flex-wrap(class="md:-mx-4")
        each product in pagination.items
          - var firstVariant = product.data.variants[0] || {}
          .mb-6.px-2.w-full.flex(
            class="md:w-1/3 lg:w-1/4"
          )
            a.flex-1.block.bg-grey-darkest.no-underline(href=product.url)
              .p-4.w-full(style="background:#000")
                img.m-4.max-w-full(src=product.data.image alt="")
              .text-center.p-4
                .text-white.no-underline.text-lg(
                  href=product.url
                )= product.data.title
                .my-4.font-black.text-xl.text-green $#{ firstVariant.price }
